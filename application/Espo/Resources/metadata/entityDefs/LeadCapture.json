{
    "fields": {
        "name": {
            "type": "varchar",
            "maxLength": 100,
            "trim": true
        },
        "campaign": {
            "type": "link"
        },
        "isActive": {
            "type": "bool",
            "default": true
        },
        "subscribeToTargetList": {
            "type": "bool",
            "default": true
        },
        "subscribeContactToTargetList": {
            "type": "bool",
            "default": true
        },
        "targetList": {
            "type": "link"
        },
        "fieldList": {
            "type": "multiEnum",
            "default": ["firstName", "lastName", "emailAddress"],
            "view": "views/lead-capture/fields/field-list",
            "required": true
        },
        "optInConfirmation": {
            "type": "bool"
        },
        "optInConfirmationEmailTemplate": {
            "type": "link"
        },
        "optInConfirmationLifetime": {
            "type": "int",
            "default": 48,
            "min": 1
        },
        "leadSource": {
            "type": "enum",
            "view": "crm:views/opportunity/fields/lead-source",
            "customizationOptionsDisabled": true,
            "default": "Web Site"
        },
        "formula": {
            "type": "text",
            "view": "views/lead-capture/fields/formula"
        }
    },
    "links": {
        "targetList": {
            "type": "belongsTo",
            "entity": "TargetList"
        },
        "campaign": {
            "type": "belongsTo",
            "entity": "Campaign"
        },
        "optInConfirmationEmailTemplate": {
            "type": "belongsTo",
            "entity": "EmailTemplate"
        }
    },
    "collection": {
        "sortBy": "name",
        "asc": true
    }
}
